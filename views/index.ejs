<% include ./partials/header.ejs %>

<body class="bg-zinc-300"  id="grad">

  <div class="container mx-auto my-14 p-4 flex justify-center items-center ">
    <div class="w-full max-w-md">
   
      <div class="bg-white h-[28rem] flex flex-col items-center rounded-lg shadow-xl mb-2">
        <div class="heading mt-10">
          <h2 class="text-3xl font-bold mb-8 text-center">Welcome to G-media</h2>
          </div>
          <% if(error.length > 0){ %>   
            <p class="text-red-800"><%= error %></p>
                <% } %>
        <form action="/login" method="post" class="space-y-6">
          <div>
            <label for="username" class="block text-gray-700 font-bold mb-2">Username</label>
            <input type="username" name="username" id="username" class="shadow appearance-none border border-gray-400 rounded w-72 py-2 px-3  text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div>
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input type="password" name="password" id="password" class="shadow appearance-none border  border-gray-400 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div class="flex items-center justify-center">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white text-xl font-bold py-2 px-8 rounded">Login</button>
          </div>
        </form>
        <hr class="w-[65%] bg-zinc-400 h-[2.5px] mt-5 mb-5">
        <span class="text-gray-700">Don't have an account? </span><a href="/register" class="font-bold text-red-500 hover:text-red-700">Register</a>

        
      </div>

    </div>
  </div>
  
  <% include ./partials/footer.ejs %>

