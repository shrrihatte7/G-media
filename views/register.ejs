<% include ./partials/header.ejs %>
<body class="bg-zinc-300">

  <div class="container mx-auto p-4 flex justify-center items-center">
    <div class="w-full max-w-md">
   
      <div class="bg-white h-auto py-10 flex flex-col items-center justify-center shadow-md rounded mb-4">
        <div class="heading">
          <h2 class="text-3xl font-bold mb-8  text-center">Welcome to Pinterest</h2>
          </div>    
        <form action="/register" class="space-y-6" method="post">
          <div class=" w-80">
            <label for="username" class="block text-gray-700 font-bold mb-2">Username</label>
            <input type="text" name="username" id="username" class="shadow appearance-none border  border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div>
            <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
            <input type="email" name="email" id="email" class="shadow appearance-none border  border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div>
            <label for="number" class="block text-gray-700 font-bold mb-2">Contact</label>
            <input type="number" name="contact" id="number" class="shadow appearance-none border  border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div>
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input type="password" name="password" id="password" class="shadow appearance-none border  border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div class="flex items-center justify-center">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white text-xl font-bold py-2 px-8 rounded">Register</button>
          </div>
        </form>
      </div>
      <div class="bg-gray-400 px-4 py-3 text-center rounded-b">
        <span class="text-gray-700">Already have an account? </span><a href="/" class="font-bold text-blue-500 hover:text-blue-800">Login</a>
      </div>
    </div>
  </div>
  
  <% include ./partials/footer.ejs %>

