<% include ./partials/header.ejs %>

<body class="bg-zinc-500">
    <h1 class="text-3xl font-bold text-center mb-4">Create New Post</h1>
  <div class="container py-8 flex items-center justify-center">
    <form action="/createpost" method="post" enctype="multipart/form-data">
      <div class="mb-4">
        <label for="image" class="block text-sm font-medium  text-white">Image</label>
        <input type="file" id="image" name="postimage" class="block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
      </div>

      <div class="mb-4">
        <label for="title" class="block text-sm font-medium  text-white">Title</label>
        <input type="text" id="title" name="title" class="block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" required>
      </div>

      <div>
        <label for="description" class="block text-sm font-medium  text-white">Description</label>
        <textarea id="description" name="description" rows="5" class="block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" required></textarea>
      </div>

      <div class="flex items-center mt-4 justify-center">
        <button type="submit" class=" w-full text-center px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-700 focus:ring-4 focus:ring-blue-500">Create Post</button>
      </div>
    </form>
  </div>



