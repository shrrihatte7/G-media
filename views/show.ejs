<% include ./partials/header.ejs %>
<a href="/add" class="mt-4 block text-center text-blue-500 hover:text-blue-700">Create New post</a>

<section class="mt-8">
      <h2 class="text-xl font-bold mb-2">Your Boards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

        <% user.posts.forEach((elem)=>{%>
        <div class="bg-white shadow-md rounded-md p-4">
          <h3 class="text-lg font-bold mb-2">Your Posts</h3>
          <img src="/images/uploads/<%= elem.postimage %>" alt="Board Image 1" class="w-full h-48 object-cover rounded-t-md">
          <a href="/show/posts" class="mt-2 text-xl text-gray-600"><%= elem.title %></a>
        </div>
        <% }) %>
    </section>
<% include ./partials/footer.ejs %>
